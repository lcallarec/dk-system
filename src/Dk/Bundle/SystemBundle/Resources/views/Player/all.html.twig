{% extends '::base.html.twig' %}

{% block body %}
    <h1 class="page-header">Liste des joueurs</h1>
    <a href="{{ path('manage_player') }}" id="create-player">
        Créer un nouveau joueur
    </a>
    {% if players is not empty %}
        <ul>
        {% for player in players %}
            <li>
                <a href="{{ path('manage_player', {id: player.id}) }}" id="player-{{ player.id}}">{{ player.nickname }} <small>({{ player.characters|length }} characters)</small></a>
                <a href="{{ path('manage_pc') }}" class="btn btn-primary">Créer un nouveau personnage</a>
                {% if players is not empty %}
                <ul>
                    {% for pc in player.characters %}
                        <li>
                            <a href="{{ path('manage_pc', {id: pc.id}) }}">{{pc.firstname}} {{pc.lastname}}</a>
                            {% if pc.campaign is not empty %}
                                <small>campagne: <strong>{{ pc.campaign.name }}</strong></small>
                            {% endif %}
                        </li>

                    {% endfor %}
                </ul>
                {% endif %}
            </li>
        {% endfor %}
        </ul>
    {% else %}
    <div class="alert alert-warning">
        Aucun joueur n'est enregistré.
    </div>
    {% endif %}
     
{% endblock %}