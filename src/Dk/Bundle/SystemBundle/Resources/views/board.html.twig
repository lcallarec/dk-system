{% extends '::base.html.twig' %}

{% block body %}
    
    {% block board %}

        <div class="container-fluid">    
            <div class="row">
                <div id="board-menu" class="col-sm-3">
                    {% block board_menu %}
                        {{ render(controller('DkSystemBundle:Board:menu')) }}
                    {% endblock %}
                </div>
                <div id="board-content" class="col-sm-9">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h1>
                                {% block title %}
                                {% endblock %}
                            </h1>
                        </div>
                    </div>
                    
                    {% block board_content %}
                       
                    {% endblock %}
                </div>
            </div>
        </div>
    
    {% endblock %}
    
{% endblock %}