{% block body %}
    <section id="login">
        <h2 class="page-header">
           Se connecter
        </h2>
        
        {{ form_start(login_form, {attr: { role: 'form' }, action: path('login_check'), method: 'post'}) }}

            {% if error %}
                <ul class="form-error">
                    <li>{{ error.message | trans({}, 'security') }}</li>
                </ul>
            {% endif %}
            
            <div class="form-group">
                {{form_label(login_form.email) }}
                {{form_widget(login_form.email) }}
            </div>
            
            <div class="form-group">
                {{form_label(login_form.password) }}
                {{form_widget(login_form.password) }}
            </div>
            
                {{form_widget(login_form.submit) }}
            
        {{ form_end(login_form) }}
        
    </section>
{% endblock %}