<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dk.factory.pc_class">Dk\Bundle\SystemBundle\Factory\PlayerCharacterFactory</parameter>
        <parameter key="dk.factory.campaign_class">Dk\Bundle\SystemBundle\Factory\CampaignFactory</parameter>
    </parameters>

    <services>

        <service id="dk.factory.pc" class="%dk.factory.pc_class%">
            <argument type="expression">service('security.context').getToken().getUser()</argument>
        </service>

        <service id="dk.factory.campaign" class="%dk.factory.campaign_class%">
            <argument type="expression">service('security.context').getToken().getUser()</argument>
        </service>

    </services>

</container>