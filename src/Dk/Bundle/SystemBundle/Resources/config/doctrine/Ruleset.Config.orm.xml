<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Dk\Bundle\SystemBundle\Entity\Ruleset\Config" table="RulesetConfig" inheritance-type="SINGLE_TABLE">

        <discriminator-column name="type" type="string" />
        <discriminator-map>
            <discriminator-mapping value="asset" class="Dk\Bundle\SystemBundle\Entity\Ruleset\AssetConfig" />
        </discriminator-map>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="hash" column="hash" type="string" length="255" />

        <field name="value" column="value" type="string" length="255" />

        <many-to-one target-entity="Dk\Bundle\SystemBundle\Entity\Ruleset" field="ruleset" inversed-by="configs">
            <join-column nullable="false" on-delete="CASCADE" />
        </many-to-one>

    </entity>

</doctrine-mapping>