{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <ul class="form-error">
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block plain_text_widget %}
    {% spaceless %}
        <strong>{{ value }}</strong>
        {% if help is defined %}
            <span class="help">{{ help }}</span>
        {% endif %}
    {% endspaceless %}
{% endblock %}
